<Window x:Class="VisionGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisionGUI"
        mc:Ignorable="d"
        xmlns:ui="http://schemas.modernwpf.com/2019"
         ui:WindowHelper.UseModernWindowStyle="True"
        Title="Vision"
        Height="400" Width="900" MinHeight="630" MinWidth="850"
        WindowStartupLocation="CenterScreen"
        StateChanged="windowStateChanged" Closing="windowClosing">

    <Grid>
        <ui:NavigationView x:Name="navView"
                           SelectionChanged="navViewSelectionChanged"
                           IsBackButtonVisible="Collapsed"
                           PaneDisplayMode="LeftCompact"
                           PaneTitle="Vision">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Tag="home" Icon="Home" Content="Home"/>
            </ui:NavigationView.MenuItems>

            <Frame x:Name="Contents"
                   NavigationUIVisibility="Hidden" Margin="20, 0, 20, 20"
                   HorizontalContentAlignment="Stretch" VerticalAlignment="Stretch"/>

        </ui:NavigationView>
    </Grid>
</Window>
